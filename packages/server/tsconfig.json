{
  "compilerOptions": {
    /* Projects */

    /* Language and Environment */
    "target": "es6",
    "lib": ["es6"],
    "experimentalDecorators": true,

    /* Modules */
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,

    /* JavaScript Support */
    "allowJs": false,

    /* Emit */
    "outDir": "build",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "strictNullChecks": false,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src"]
}
